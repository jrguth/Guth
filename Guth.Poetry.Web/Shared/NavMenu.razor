@code {
    [Inject] NavigationManager Nav { get; set; }

    private async Task NavigateToRandomPoem()
    {
        Poem poem = (await Client.GetRandomTitles(1)).First();
        Nav.NavigateTo($"/titles/{poem.Title}");
    }
}
